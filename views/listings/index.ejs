<% layout("/layouts/boilerplate") %>
<body>

  <div class="container mt-4">

    <% if (typeof country !== 'undefined' && country.trim() !== "") { %>
      <h4 class="mb-4">Showing results for "<%= country %>"</h4>
    <% } else { %>
      <h3 class="mb-4">All Listings</h3>
    <% } %>

    <% if (allListings.length === 0) { %>
      <p class="text-muted">No listings found for the selected destination.</p>
    <% } %>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing.id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm">
              <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height: 14rem; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text mb-0">
                  &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                </p>
                <small class="text-muted"><%= listing.location %>, <%= listing.country %></small>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>

  </div>

</body>
